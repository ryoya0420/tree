<div class="user-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 user-new-container">
        <h1>マイページ</h1>
        <p>名前</p>
        <h2><%= @user.name %></h2><br>
        <p>メールアドレス</p>
        <h2><%= @user.email %></h2>
        <% if @user.id == @current_user.id %>
          <%= link_to "編集", edit_user_path %> 
          <%= link_to '削除',"/users/#{@user.id}",method: :derete %>
        <% end %>
        <%= link_to "トップページ", root_path %>
        <%= link_to "商品登録ページ", new_product_path %>
      </div> 
    </div>
  </div>
</div>